<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dip"
    tools:context=".MainActivity"
    android:baselineAligned="true"
    android:layout_weight="1">


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="141dp"
        android:layout_height="129dp"
        android:src="@drawable/penguin"

        >

    </ImageView>

    <EditText
        android:id="@+id/number"
        android:layout_width="404dp"
        android:layout_height="216dp"

        android:cursorVisible="false">

    </EditText>

    <TableLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/number">
        <TableRow
            android:layout_weight="0.5">
            <Button
                android:onClick="onClick"
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30sp">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp">

            </Button>
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:onClick="onClick"
                android:id="@+id/n1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:onClick="onClick"
                android:id="@+id/n4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:onClick="onClick"
                android:id="@+id/n7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="â†">

            </Button>
            <Button
                android:onClick="onClick"
                android:id="@+id/n0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30sp"
                android:layout_weight="1">

            </Button>
        </TableRow>
    </TableLayout>


</RelativeLayout>
