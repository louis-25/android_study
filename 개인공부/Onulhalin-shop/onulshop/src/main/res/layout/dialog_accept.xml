<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="배송까지 걸리는 \n 시간을 선택해 주세요"
            android:textColor="#F0000000"
            android:textSize="25dp"
            android:textStyle="bold" />


        <me.onulhalin.sample.onul_shop.tool.ToggleButtonGroupTableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TableRow>

                <RadioButton
                    android:id="@+id/rad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <RadioButton
                    android:id="@+id/rad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rad4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <RadioButton
                    android:id="@+id/rad5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rad6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Button1"
                    android:textColor="@drawable/radiotxtcolor"
                    android:textSize="20dp" />

            </TableRow>

        </me.onulhalin.sample.onul_shop.tool.ToggleButtonGroupTableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_halfhour" />

            <Button
                android:id="@+id/one1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_forty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/one2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_fifty" />

            <Button
                android:id="@+id/one3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_sixty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/one4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_ninety" />

            <Button
                android:id="@+id/one5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/n_towhour" />
        </LinearLayout>

        <Button

            android:id="@+id/sendbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0095A0"
            android:text="보내기"
            android:textColor="#FFFF" />
    </LinearLayout>
</LinearLayout>
