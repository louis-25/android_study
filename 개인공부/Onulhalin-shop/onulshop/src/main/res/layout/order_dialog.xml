<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

<LinearLayout
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    android:id="@+id/popup_txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textStyle="bold"
        android:textColor="#F0000000"
        android:textSize="25dp"
        android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="오늘의할인!~"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:textColor="#0095A0"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 주문"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#F0000000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이"/>
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="#F0000000"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="들어왔습니다."/>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#FF7070"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*5분이 지나면 접수지연으로 자동취소됩니다."/>

</LinearLayout>
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/popup_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/offtxt"

        android:layout_marginLeft="20dp"
        android:background="@drawable/roundcancelbtn"
        android:textColor="#FFFF"
        android:text="닫기" />

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/roundacceptbtn"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:id="@+id/apply_button"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/offtxt"
            android:text="주문확인" />
    </LinearLayout>
</RelativeLayout>