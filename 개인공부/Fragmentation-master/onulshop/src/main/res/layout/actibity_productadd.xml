<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <include
            android:id="@+id/top"
            layout="@layout/header"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        tools:context="com.js.pickimagefromgallery.MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pototxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_below="@+id/pototxt"
            android:background="@drawable/photocamera"
            android:scaleType="fitXY"
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
             />

        <Button
            android:visibility="gone"
            android:id="@+id/buttonLoadPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_below="@+id/imageView"
            android:onClick="loadImagefromGallery"
            android:text="사진등록"/>

</RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="입력하기"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원래 가격"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/price_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="입력하기" />

            <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="입력하기"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마감 전 할인 가격"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재고 수"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="갯수"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카테고리 설정"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="수정(상태)"
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설명글"
            android:textColor="#F0000000"
            android:textSize="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="입력하기"
            />

        <Button
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:text="다음"
            android:layout_height="wrap_content"
            android:id="@+id/regbtn"/>

            <Button
                android:id="@+id/updatebtn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수정"
                />
    </LinearLayout>
</ScrollView>
</LinearLayout>